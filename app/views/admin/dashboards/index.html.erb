<!DOCTYPE html>
<html>
  <head>
    <title>TravelPlanner</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/83ea46e6d2.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="#">Travel Planner</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to admin_dashboards_path, class: "nav-link" do %>
              <i class="fa-solid fa-book-bookmark"></i>ユーザー一覧 <span class="sr-only">(current)</span>
            <% end %>
          </li>
          <% if admin_signed_in? %>
            <li class="nav-item">
            <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link" do %>
              <i class="fa-solid fa-address-book"></i>ログアウト <span class="sr-only">(current)</span>
            <% end %>
            </li>
          <% end %>
        </ul>
        </div>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </header>
  <%= yield %>
</html>

<div class="container py-4">
  <div class="row">
  </div>
  <div class="row">
  </div>
  <div class="jumbotron p-3 p-md-5 text-white rounded bg-info">
    <div class="col-md-6 mx-auto">
      <h1 class="display-4 font-italic text-center">全ユーザー一覧</h1>
      <p class="lead my-3 text-center"></p>
    </div>
  </div>

  <% if @users.present? %>
  <div class="row justify-content-center mt-4">
    <% @users.each do |user| %>
      <div class="col-md-6 mb-4">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <div class="position-relative d-inline-block">
              <%= link_to do %>
                <%= image_tag user.get_profile_image(300,300), class:"bd-placeholder-img rounded-circle", width: 140, height: 140, preserve_aspect_ratio: "xMidYMid slice", role: "img", "aria-label": "Placeholder", focusable: false  %>
              <% end %>
            </div>
            <h3><%= user.name %></h3>
            <h3><%= user.email %></h3>
            <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>

<footer class="text-body-secondary py-5 bg-light text-center">
  <div class="container">
    <p class="mb-1">
      <a href="#" class="text-dark">Back to top</a>
    </p>
  </div>
</footer>