<%= render 'layouts/plate' %>
<% if @book.user_id == current_user.id || @book.shared_users.include?(current_user) %>
  <%= render 'schedules/plan' %>
<% end %>

<div class="container mt-5">
  <%if @category.errors.any? %>
    <%= @category.errors.count %>件のエラーが発生しました
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>タイトル作成</h1>
      <%= form_with model: [@book, @check_list, @category], local: true do |f| %>
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">
              <%= f.label :name, 'カテゴリー' %><br>
              <%= f.text_field :name, required: true %>
            </h5>
          </div>
        </div>
        <div class="actions">
        <%= f.submit '作成', class: "btn btn-sm btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>