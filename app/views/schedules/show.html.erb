<%= render 'schedules/plan' %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h7 class="card-title">
            タイトル
            <p><%= @schedule.title %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            日にち
            <p><%= @schedule.start_date.strftime('%m月%d日') %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            開始時間
            <p><%= @schedule.start_time %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            終了時間
            <p><%= @schedule.end_time %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            メモ
            <p><%= @schedule.schedule_memo %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            場所
            <p><%= @schedule.place %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            予算
            <p><%= @schedule.budget %></p>
          </h7>
        </div>
        <div class="btn-group">
          <%= link_to '編集する', edit_book_schedule_path(@book, @schedule), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'お金管理一覧へ', book_schedules_path(@book, @schedule), class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>