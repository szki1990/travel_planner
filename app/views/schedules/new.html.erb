<h1>スケジュール作成</h1>
<%= form_with model: @schedule, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control", id: "schedule_title", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :start_date, "開始日" %>
    <%= f.date_field :start_date, class: "form-control", id: "schedule_start_date", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :end_date, "終了日" %>
    <%= f.date_field :end_date, class: "form-control", id: "schedule_end_date", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, "開始時間" %>
    <%= f.time_field :start_time, class: "form-control", id: "schedule_start_time", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :end_time, "終了時間" %>
    <%= f.time_field :end_time, class: "form-control", id: "schedule_end_time", required: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :schedule_memo, "メモ" %>
    <%= f.text_area :schedule_memo, class: "form-control", id: "schedule_memo", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :place, "場所" %>
    <%= f.text_field :place, class: "form-control", id: "schedule_place", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :budget, "予算" %>
    <%= f.number_field :budget, class: "form-control", id: "schedule_budget", required: true %>
  </div>

  <%= f.submit "スケジュール作成", class: "btn btn-primary" %>
<% end %>
