<div class="container">
  <nav class="navbar navbar-expand navbar-light bg-light rounded">
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav mx-auto">
        <li class="nav-item mx-2">
          <%= link_to book_schedules_path(book_id: @book.id), class: 'nav-link', data: {turbolinks: "false"}  do %>
            <i class="fa-solid fa-user-clock"></i> <span class="nav-text">スケジュール</span> <span class="sr-only">(current)</span>
          <% end %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to book_costs_path(book_id: @book.id), class: 'nav-link' do %>
            <i class="fa-regular fa-credit-card"></i> <span class="nav-text">お金管理</span> <span class="sr-only">(current)</span>
          <% end %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to book_check_lists_path(book_id: @book.id), class: 'nav-link' do %>
            <i class="fa-regular fa-square-check"></i> <span class="nav-text">チェックリスト</span> <span class="sr-only">(current)</span>
          <% end %>
        <li class="nav-item mx-2">
          <%= link_to book_memos_path(book_id: @book.id), class: 'nav-link' do %>
            <i class="fa-solid fa-file-pen"></i> <span class="nav-text">メモ</span> <span class="sr-only">(current)</span>
          <% end %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to book_path(@book), class: 'nav-link' do %>
            <i class="fa-solid fa-book-open-reader"></i> <span class="nav-text">しおり詳細</span> <span class="sr-only">(current)</span>
          <% end %>
        </li>
      </ul>
    </div>
