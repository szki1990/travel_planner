<%= render 'schedules/plan' %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: [@book, @check_list, @category, @item], local: true) do |f| %>
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">
              <%= f.text_field :content, class: 'form-control', required: true %>
            </h5>
          </div>
          <div class="card-footer d-flex justify-content-end">
            <div class="btn-group">
              <%= f.submit '保存', class: "btn btn-sm btn-outline-secondary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
