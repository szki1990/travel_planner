<h2 class="text-center pt-3">ユーザー情報編集ページ</h2>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><span>※変更しない場合はそのまま更新してください</span><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'メールアドレス' %>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>現在、以下のメールアドレスの確認を待っています for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="form-group">
          <%= f.label :password %> (<%= @minimum_password_length %> 文字以上)<span>※変更しない場合は空欄のまま更新してください</span><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: '新しいパスワード' %>
          <% if @minimum_password_length %>
          <% end %>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: 'パスワード(確認用)' %>
        </div>
      
        <div class="form-group">
          <%= f.label :current_password, "現在のパスワード" %> (変更を確認するために現在のパスワードが必要です)<br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: '現在のパスワード', required: true %>
        </div>
      
        <div class="actions py-3">
          <%= f.submit "更新", class: 'btn btn-outline-primary btn-lg btn-block' %>
        </div>
      <% end %>
      
      <%= link_to "戻る", :back, class: 'btn btn-outline-secondary btn-lg btn-block' %>
    </div>
  </div>
</div>