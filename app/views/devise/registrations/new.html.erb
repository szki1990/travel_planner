<!doctype html>
<html lang="ja">
  <head>
    <title>新規登録</title>
    <link rel="canonical" href="https://getbootstrap.jp/docs/5.3/examples/sign-in/">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <a id="skippy" class="sr-only sr-only-focusable" href="#content">
      <div class="container">
        <span class="skiplink-text">Skip to main content</span>
      </div>
    </a>

    <div class="container text-center">
      <h2 class="pt-3">新規登録</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="container">
        <div class="card-container">
          <div class="card-body">
            <div class="form-group">
              <%= f.label :name, "名前", class: "sr-only" %>
              <%= f.text_field :name, class: "form-control", placeholder: "名前", required: true, autofocus: true %>
            </div>

            <div class="form-group">
              <%= f.label :email, "メールアドレス", class: "sr-only" %>
              <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", required: true, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group">
              <% if @minimum_password_length %>
                <%= f.label :password, "パスワード(#{@minimum_password_length} 文字以上)", class: "sr-only" %>
              <% else %>
                <%= f.label :password, "パスワード", class: "sr-only" %>
              <% end %>
              <%= f.password_field :password, class: "form-control", placeholder: "パスワード", required: true, autocomplete: "new-password" %>
            </div>


            <div class="form-group">
              <%= f.label :password_confirmation, "パスワード(確認用)", class: "sr-only" %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード(確認用)", required: true, autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-block" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>
      window.jQuery || document.write('<script src="/docs/4.3/assets/js/vendor/jquery-slim.min.js"><\/script>')
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="/docs/4.3/assets/js/vendor/anchor.min.js"></script>
    <script src="/docs/4.3/assets/js/vendor/clipboard.min.js"></script>
    <script src="/docs/4.3/assets/js/vendor/bs-custom-file-input.min.js"></script>
    <script src="/docs/4.3/assets/js/src/application.js"></script>
    <script src="/docs/4.3/assets/js/src/search.js"></script>
    <script src="/docs/4.3/assets/js/src/ie-emulation-modes-warning.js"></script>
  </body>
</html>


