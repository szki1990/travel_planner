<%= render 'layouts/plate' %>
<div class="container py-3">
  <div class="row justify-content-center mt-5">
    <div class="col-lg-4 text-center">
      <div class="position-relative d-inline-block">
        <%= image_tag @user.get_profile_image(300,300), class:"bd-placeholder-img rounded-circle", width: 140, height: 140, preserve_aspect_ratio: "xMidYMid slice", role: "img", "aria-label": "Placeholder", focusable: false  %>
      </div>
      <% if @user == current_user %>
      <h2 class="fw-normal mt-3"><%= @user.name %></h2>
        <%= link_to edit_user_path(@user), class: "btn-sm btn-outline-secondary" do %>
        編集する<i class="fa-solid fa-user-pen"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-lg-4 text-center">
      <div class="p-2"><%= link_to 'いいね一覧', favorites_path, class: 'btn btn-sm btn-outline-warning border-warning' %></div>
      <div class="p-2"><%= link_to 'フォローしている友達', followings_user_path(@user), class: 'btn btn-sm btn-outline-success border-success' %></div>
      <div class="p-2"><%= link_to 'フォローされている友達', followers_user_path(@user), class: 'btn btn-sm btn-outline-success border-success' %></div>
      <div class="p-2"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-sm btn-outline-primary border-primary" %></div>
      <div class="p-2"><%= link_to '退会する', user_path(@user), method: :delete, data: { confirm: '本当に退会しますか？' }, class: "btn btn-sm btn-outline-danger border-danger" %></div>
      <div class="p-2"><%= link_to 'メールアドレス または パスワードを変更する', edit_user_registration_path %></div>
      </div>
    </div>
</div>

