<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: @user, local: true) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "件") %> のエラーが発生しました</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div><%= link_to 'マイページへ', my_page_path, class: "btn btn-sm btn-outline-secondary" %></div>
        <h4 class="mb-3">ユーザー情報編集</h4>
        <div class="d-flex flex-column align-items-center text-center">
          <div class="position-relative d-inline-block md-2">
            <%= image_tag @user.get_profile_image(300,300), class:"bd-placeholder-img rounded-circle", width: 140, height: 140, preserve_aspect_ratio: "xMidYMid slice", role: "img", "aria-label": "Placeholder", focusable: false  %>
          </div>
        </div>
        <div class="form-group">
          <label for="user_name">名前</label>
          <%= f.text_field :name, class: "form-control", id: "inputName", required: true %>
          <div class="invalid-feedback">
            名前を入力してください。
          </div>
        </div>
        
        <div class="field">
          <%= f.label :profile_image, "プロフィール画像" %><br />
          <%= f.file_field :profile_image, placeholder: "プロフィール画像を選択", accept: "image/*" %>
        </div>
        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" type="submit">変更</button>
      <% end %>