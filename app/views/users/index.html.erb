<div class="container py-4">
  <div class="container py-4">
    <div class="row">
      <div class="col-md-6">
        <div class="text-right mb-1">
          <%= form_with url: users_path, method: :get, local: true do |f| %>
            <%= f.text_field :name, placeholder: 'ユーザーを検索' %>
            <%= f.submit '検索' %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% if @users.present? %>
        <% else %>
          <p>該当するユーザーは見つかりませんでした。</p>
        <% end %>
      </div>
    </div>
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-info">
      <div class="col-md-6 mx-auto">
        <h1 class="display-4 font-italic text-center">ユーザー一覧</h1>
        <p class="lead my-3 text-center"></p>
      </div>
    </div>
    <div class="row justify-content-center mt-4">
    <% @users.each do |user| %>
      <div class="col-md-6 mb-4">
        <div class="card flex-md-row mb-4 shadow-sm h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <%= user.name %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

<footer class="text-body-secondary py-5 bg-light text-center">
  <div class="container">
    <p class="mb-1">
      <a href="#" class="text-dark">Back to top</a>
    </p>
  </div>
</footer>