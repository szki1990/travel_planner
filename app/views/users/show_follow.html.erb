<%= render 'layouts/plate' %>
<div class="container py-4">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center"><%= @title %></h1>
    </div>
  </div>

  <% if @users && @users.any? %>
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body text-center">
              <div class="position-relative d-inline-block">
                <%= link_to user_path(user) do %>
                  <%= image_tag user.profile_image, class: 'img-fluid rounded-circle', style: "width: 100px; height: 100px;" %>
                <% end %>
              </div>
              <h5 class="card-title"><%= user.name %></h5>
              <%= link_to 'しおりを見る', user_path(user), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="row">
      <div class="col-12">
        <p class="text-center text-muted">友達はいません。</p>
      </div>
    </div>
  <% end %>
</div>
