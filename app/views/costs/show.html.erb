<%= render 'layouts/plate' %>
<%= render 'schedules/plan' %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h7 class="card-title">
            購入品
            <p><%= @cost.purchase_item %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            日にち
            <p><%= @cost.date.strftime('%m月%d日') %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            価格
            <p><%= @cost.price %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            購入者
            <p><%= @cost.consumer %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            支払い方法
            <p><%= PAYMENT_METHODS[@cost.payment_method] %></p>
          </h7>
        </div>
        <div class="card-header">
          <h7 class="card-title">
            メモ
            <p><%= @cost.remarks %></p>
          </h7>
        </div>
        <div class="btn-group">
          <%= link_to '編集する', edit_book_cost_path(@book, @cost), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'お金管理一覧へ', book_costs_path(@book, @cost), class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>