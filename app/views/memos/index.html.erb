<%= render 'schedules/plan' %>

<div class="container mt-5">
  <div class=mb-4>
  <%= link_to '作成', new_book_memo_path(@book), class: 'btn btn-outline-secondary' %>
  </div>
  <div class="row">
    <% @memos.each do |memo| %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">
              <%= memo.title %>
            </h5>
          </div>
          <div class="card-body">
            <p class="card-text">
              <%= memo.body %>
            </p>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to '編集', edit_book_memo_path(@book, memo), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to '削除', book_memos_path(@book, memo), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-outline-secondary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
