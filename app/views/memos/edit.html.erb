<%= render 'schedules/plan' %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: [@book, @memo], local: true) do |f| %>
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">
              <%= f.text_field :title, class: 'form-control' %>
            </h5>
          </div>
          <div class="card-body">
            <p class="card-text">
              <%= f.text_area :body, class: 'form-control', rows: 12 %>
            </p>
          </div>
          <div class="card-footer d-flex justify-content-end">
            <div class="btn-group">
              <%#= link_to '削除', book_memo_path(@book, memo), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-outline-secondary" %>
              <%= f.submit '保存', class: "btn btn-sm btn-outline-secondary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

