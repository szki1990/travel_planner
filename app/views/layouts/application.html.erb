<!DOCTYPE html>
<html>
  <head>
    <title>TravelPlanner</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <script src="https://kit.fontawesome.com/83ea46e6d2.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag('logo.jpg') %></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to books_path do %>
                    <i class="fa-solid fa-book-open-reader">しおり一覧</i>
                  <% end %>
                </li>
                <li>
                  <%= link_to do %>
                    <i class="fa-solid fa-camera-retro">投稿一覧</i>
                  <% end %>
                </li>
                <li>
                  <%= link_to my_page_path do %>
                    <i class="fa-regular fa-user">マイページ</i>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to "Topページ", homes_top_path %>
                </li>
                <li>
                  <%= link_to new_user_registration_path do %>
                    <i class="fa-solid fa-user-plus">新規登録</i>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path do %>
                    <i class="fa-solid fa-user-check">ログイン</i>
                  <% end %>
                </li>
                <li>
                  <%= link_to do %>
                    <i class="fa-solid fa-users-between-lines">ゲストログイン</i>
                  <% end %>
                </li>
              <% end %>
              </ul>
            </div>
          </div>
        </nav>
      </header>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
      </header>
    <%= yield %>
  </body>
</html>
