<h3>しおり一覧ページ</h3>

<% @books.each do |book| %>
  <% if book.public || book.user == current_user %>
    <div>
      <%= link_to book_path(book.id) do %>
        <%= image_tag book.get_image %>
      <% end %>
      <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100), class: "rounded-circle" %></p>
      <p>ユーザーネーム：<%= book.user.name %></p>
      <p>タイトル：<%= book.title %></p>
      <p>開始日：<%= book.start_day %></p>
      <p>終了日：<%= book.end_day %></p>
    </div>
  <% end %>
<% end %>

