<h3>しおり詳細ページ</h3>

<div>
  <%= image_tag @book.get_image %>
  <p>タイトル:<%= @book.title %></p>
  <p>開始日:<%= @book.start_day %></p>
  <p>終了日:<%= @book.end_day %></p>
  <p>投稿ユーザー画像：<%= image_tag @book.user.get_profile_image(100,100), class: "rounded-circle" %></p>
  <p>ユーザーネーム:<%=@book.user.name %></p>
  <p>投稿日:<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
    <%= link_to "削除", book_path(@book), method: :delete %>
  <% end %>
</div>
