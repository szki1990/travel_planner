<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: @book, local: true) do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "件のエラーが発生しました。") %> しおりを保存できませんでした。</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %><%= 'を入力してください' unless message.include?('を入力してください') %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      <div><%= link_to '一覧へ', books_path, class: 'btn btn-outline-secondary' %></div>
      <h4 class="mb-3">しおり編集</h4>
        <div class="form-group">
          <label for="book_title">タイトル</label>
          <%= f.text_field :title, class: "form-control", id: "book_title", required: true %>
          <div class="invalid-feedback">
            タイトルを入力してください。
          </div>
        </div>

        <div class="form-group">
          <label for="book_start_day">開始日</label>
          <%= f.date_field :start_day, class: "form-control", id: "book_start_day", required: true %>
          <div class="invalid-feedback">
            開始日を入力してください。
          </div>
        </div>

        <div class="form-group">
          <label for="book_end_day">終了日</label>
          <%= f.date_field :end_day, class: "form-control", id: "book_end_day", required: true %>
          <div class="invalid-feedback">
            終了日を入力してください。
          </div>
        </div>

        <div class="form-group">
          <label for="post_visibility">公開設定</label>
          <select class="custom-select d-block w-100" id="post_visibility" required>
            <option value="public">公開</option>
            <option value="private">非公開</option>
          </select>
          <div class="invalid-feedback">
            オプションを選択してください。
          </div>
        </div>

        <div class="form-group">
          <h4>画像</h4>
          <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
        </div>

        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" type="submit">更新</button>
      <% end %>
    </div>
  </div>

  <footer class="my-5 pt-5 text-muted text-center text-small">

  </footer>
</div>


<style>
  .container {
    margin-top: 50px;
  }
  .form-group {
    margin-bottom: 15px;
  }
</style>



