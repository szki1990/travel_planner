<%= form_with(model: book, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :start_day %>
    <%= form.date_select :start_day %>
  </div>

  <div>
    <%= form.label :end_day %>
    <%= form.date_select :end_day %>
  </div>

  <div>
    <%= form.label :public, '公開' %>
    <%= form.radio_button :public, true %> 公開
    <%= form.radio_button :public, false %> 非公開
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
