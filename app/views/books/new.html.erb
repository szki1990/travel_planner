<%= render 'book', books: @books %>

<%= form_with model: @book do |f| %>
  <div>
    <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  
  <div>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <h4>開始日</h4>
    <%= f.text_field :start_day %>
  </div>
  
  <div>
    <h4>終了日</h4>
    <%= f.text_field :end_day %>
  </div>
  
  <div>
    <%= f.submit '作成' %>
  </div>
<% end %>

<div class="row">
  <% if @book.errors.any? %>
    <p>以下の項目を入力してください</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="col-md-8 order-md-1">
    <div class="row">
      <div class="col-md-8 order-md-1">
      <h4 class="mb-3">しおり作成</h4>
      <%= form_with(model: @book, local: true, html: { class: "needs-validation", novalidate: true }) do |f| %>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="book_start_day">タイトル</label>
            <%= f.text_field :title, class: "form-control", id: "book_start_day", required: true %>
            <div class="invalid-feedback">
              タイトルを入力してください。
            </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="book_start_day">開始日</label>
            <%= f.text_field :start_day, class: "form-control", id: "book_start_day", required: true %>
            <div class="invalid-feedback">
              開始日を入力してください。
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="book_end_day">終了日</label>
            <%= f.text_field :end_day, class: "form-control", id: "book_end_day", required: true %>
            <div class="invalid-feedback">
              終了日を入力してください。
            </div>
          </div>
        </div>
      <%= f.submit '作成する', class: "btn btn-primary" %>
    <% end %>
  </div>

        </div>

        <div class="row">
          <div class="col-md-5 mb-3">
            <label for="country">post</label>
            <select class="custom-select d-block w-100" id="country" required>
              <option value="">公開</option>
              <option>非公開</option>
            </select>
            <div class="invalid-feedback">
              Please select a valid country.
            </div>
          </div>
        </div>
        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" type="submit">作成する</button>
      </form>
    </div>
  </div>

  <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1">&copy; 2017-2018 Company Name</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#">Privacy</a></li>
      <li class="list-inline-item"><a href="#">Terms</a></li>
      <li class="list-inline-item"><a href="#">Support</a></li>
    </ul>
  </footer>
</div>