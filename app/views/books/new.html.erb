<h1>しおり作成</h1>

<% if @book.errors.any? %>
  以下の項目を入力してください
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>開始日</h4>
  <%= f.text_field :start_day %>
  <h4>終了日</h4>
  <%= f.text_field :end_day %>
  <%= f.submit '作成' %>
<% end %>